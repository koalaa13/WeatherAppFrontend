<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/backgroundColor</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="MainInfoStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NonMainInfoStyle" parent="Theme.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/nonMainTextColor</item>
    </style>

    <style name="NonMainInfoStyle.WithBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DataStyle" parent="Theme.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dataTextColor</item>
    </style>

    <style name="DataStyle.WithBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ImageStyle1">
        <item name="android:tint">@color/dataTextColor</item>
    </style>

    <style name="ImageStyle1.WithBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ImageStyle2">
        <item name="android:tint">@color/nonMainTextColor</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="ImageStyle2">
        <item name="android:padding">10dp</item>
        <item name="minWidth">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>